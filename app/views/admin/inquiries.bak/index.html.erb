<p id="notice"><%= notice %></p>

<h1>お問い合わせ一覧画面</h1>

<table>
  <thead>
    <tr>
		<th>
			ID
		</th>
		<th>
			日時
		</th>
		<th>
			E-mail
		</th>
		<th>
			名前
		</th>
		<th>

		</th>
    </tr>
  </thead>

  <tbody>
    <% @inquiries.each do |inquiry| %>
      <tr>
		  <td>
			  <%= inquiry.id %>
		  </td>
		  <td>
			  <%= inquiry.name %>
		  </td>
		  <td>
			  <%= inquiry.email %>
		  </td>
		  <td>
			  <%= inquiry.created_at.strftime('%Y年%m月%d日') %>
		  </td>
		  <td>
			<%= link_to '編集', edit_admin_inquiry_path(inquiry) %><br>
			<%= link_to '削除', admin_inquiry_path(inquiry.id), method: :delete, data: { confirm: 'Are you sure?' } %><br>
		  </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

