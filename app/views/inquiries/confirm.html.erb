<h1>お問い合わせ　確認画面</h1>

<%= form_for(@inquiry) do |f| %>
  <% if @inquiry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@inquiry.errors.count, "error") %> prohibited this inquiry from being saved:</h2>

      <ul>
      <% @inquiry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
	  <tr>
		  <th>名前</th>
		  <td>
			  <%= @inquiry.name %>
			  <%= f.hidden_field :name %>
		  </td>
	  </tr>
	  <tr>
		  <th>E-mail</th>
		  <td>
			  <%= @inquiry.email %>
			  <%= f.hidden_field :email %>
		  </td>
	  </tr>
	  <tr>
		  <th>内容</th>
		  <td>
			  <%= nl2br(@inquiry.body) %>
			  <%= f.hidden_field :body %>
		  </td>
	  </tr>
  </table>

  <div class="actions">
    <%= f.submit 'キャンセル', name: 'cancel' %>
    <%= f.submit '送信', name: 'commit' %>
  </div>
<% end %>
